{
  "name": "couchdb-crud-rest-node-express-nano",
  "version": "1.0.0",
  "description": "Services for CouchDB CRUD operations using Node, Express, and Nano",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:bg": "lsof -t -i:3000 | xargs -r kill -9 && forever start -a --uid couchcrud -c 'npm start' ./",
    "tsc": "tsc",
    "debug": "nodemon --inspect dist/server.js",
    "lint": "eslint src --ext ts",
    "test": "mocha -t 2000 --require ts-node/register test/**/*.spec.ts --exit",
    "coverage": "nyc npm test",
    "nyc": "nyc report",
    "sonar": "node sonar.runner.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/varmagtm/couchdb-crud-rest-node-express-nano-ts"
  },
  "keywords": [
    "rest",
    "couchdb",
    "crud",
    "node",
    "npm",
    "express",
    "nano",
    "ts"
  ],
  "author": "Nagendra Varma",
  "license": "MIT",
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50,
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.spec.ts",
      "src/**/index.ts",
      "src/**/server.ts",
      "dist"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "extension": [
      ".ts"
    ],
    "cache": false,
    "all": true,
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "config": "^2.0.0",
    "express": "^4.16.3",
    "nano": "^8.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.3",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "chai-spies": "^1.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "properties-reader": "0.0.16",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.0.5",
    "sonarqube-scanner": "^2.4.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  }
}
